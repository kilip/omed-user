{
    "name": "omed/user",
    "description": "Mezzio User managed by Doctrine",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Anthonius Munthi",
            "email": "me@itstoni.com"
        }
    ],
    "minimum-stability": "stable",
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Omed\\User\\Component\\": "./src/component",
            "Omed\\User\\Contracts\\": "./src/contracts",
            "Omed\\User\\Doctrine\\": "./src/doctrine",
            "Omed\\User\\Mezzio\\": "./src/mezzio"
        }
    },
    "scripts": {
        "check": [
            "@psalm",
            "@phpstan",
            "@test"
        ],
        "cs-fix": "php-cs-fixer fix",
        "phpstan": "phpstan analyse",
        "psalm": "psalm --shepherd --stats",
        "test": "phpunit"
    },
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "doctrine/mongodb-odm": "^2.1",
        "doctrine/orm": "^2.8",
        "friendsofphp/php-cs-fixer": "^2.17",
        "jangregor/phpstan-prophecy": "^0.8.1",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "^0.12.59",
        "phpstan/phpstan-doctrine": "^0.12.25",
        "phpstan/phpstan-phpunit": "^0.12.16",
        "phpunit/phpunit": "^9.5",
        "psalm/plugin-phpunit": "^0.14.0",
        "vimeo/psalm": "^4.3"
    }
}
